<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomSheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/top_left_and_right_borders_round"
    android:backgroundTint="@color/white"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_add_notification_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:drawablePadding="@dimen/sp_20"
            android:focusable="true"
            android:padding="@dimen/margin_20"
            android:text="@string/add"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_20"
            app:drawableStartCompat="@drawable/ic_add" />


        <TextView
            android:layout_width="match_parent"
            android:id="@+id/tv_delete_from_notification"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:drawablePadding="@dimen/sp_20"
            android:focusable="true"
            android:padding="@dimen/margin_20"
            android:text="@string/delete"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_20"
            app:drawableStartCompat="@drawable/ic_baseline_delete_24" />

    </LinearLayout>
</LinearLayout>