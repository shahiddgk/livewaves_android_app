<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/buttercup"
    tools:context=".activities.RegisterActivity">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/slider_view_pager"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </androidx.viewpager.widget.ViewPager>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_16"
            android:src="@drawable/logo" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxStrokeColor="@color/white"
            app:boxBackgroundColor="@color/white"
            android:layout_margin="@dimen/margin_16"
            android:elevation="0dp"
            app:hintEnabled="false"
            app:boxCornerRadiusBottomEnd="@dimen/radius_16"
            app:boxCornerRadiusBottomStart="@dimen/radius_16"
            app:boxCornerRadiusTopEnd="@dimen/radius_16"
            app:boxCornerRadiusTopStart="@dimen/radius_16">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/name"
                android:id="@+id/et_name"
                android:padding="@dimen/padding_16"
                android:inputType="text"
                android:textCursorDrawable="@null"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxStrokeColor="@color/white"
            app:boxBackgroundColor="@color/white"
            android:layout_marginStart="@dimen/margin_16"
            android:layout_marginEnd="@dimen/margin_16"
            android:elevation="0dp"
            app:hintEnabled="false"
            app:boxCornerRadiusBottomEnd="@dimen/radius_16"
            app:boxCornerRadiusBottomStart="@dimen/radius_16"
            app:boxCornerRadiusTopEnd="@dimen/radius_16"
            app:boxCornerRadiusTopStart="@dimen/radius_16">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/username"
                android:id="@+id/et_username"
                android:padding="@dimen/padding_16"
                android:inputType="text"
                android:textCursorDrawable="@null"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxStrokeColor="@color/white"
            app:boxBackgroundColor="@color/white"
            android:layout_margin="@dimen/margin_16"
            android:elevation="0dp"
            app:hintEnabled="false"
            app:boxCornerRadiusBottomEnd="@dimen/radius_16"
            app:boxCornerRadiusBottomStart="@dimen/radius_16"
            app:boxCornerRadiusTopEnd="@dimen/radius_16"
            app:boxCornerRadiusTopStart="@dimen/radius_16">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/email"
                android:id="@+id/et_title"
                android:padding="@dimen/padding_16"
                android:inputType="textEmailAddress"
                android:textCursorDrawable="@null"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxStrokeColor="@color/white"
            app:boxBackgroundColor="@color/white"
            android:layout_marginStart="@dimen/margin_16"
            android:layout_marginEnd="@dimen/margin_16"
            android:elevation="0dp"
            app:hintEnabled="false"
            app:boxCornerRadiusBottomEnd="@dimen/radius_16"
            app:boxCornerRadiusBottomStart="@dimen/radius_16"
            app:boxCornerRadiusTopEnd="@dimen/radius_16"
            app:boxCornerRadiusTopStart="@dimen/radius_16">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/password"
                android:id="@+id/et_password"
                android:padding="@dimen/padding_16"
                android:textCursorDrawable="@null"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxStrokeColor="@color/white"
            app:boxBackgroundColor="@color/white"
            android:layout_margin="@dimen/margin_16"
            android:elevation="0dp"
            app:hintEnabled="false"
            app:boxCornerRadiusBottomEnd="@dimen/radius_16"
            app:boxCornerRadiusBottomStart="@dimen/radius_16"
            app:boxCornerRadiusTopEnd="@dimen/radius_16"
            app:boxCornerRadiusTopStart="@dimen/radius_16">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/confirm_password"
                android:id="@+id/et_confirm_password"
                android:padding="@dimen/padding_16"
                android:textCursorDrawable="@null"/>
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="@dimen/margin_16"
            android:orientation="horizontal">
            <com.google.android.material.checkbox.MaterialCheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_16"
                android:buttonTint="@color/white"
                android:id="@+id/check_terms"
                android:text="@string/i_agree_to_the_terms_of_service"
                android:textColor="@color/white"
                android:padding="@dimen/padding_8"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terms &amp; Services"
                android:id="@+id/txt_privacypolicy"
                android:paddingStart="@dimen/padding_8"
                android:textColor="@color/white"
                android:textStyle="bold"/>

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_sign_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_16"
            android:backgroundTint="@color/thunder"
            android:padding="@dimen/padding_16"
            android:text="@string/signup"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:cornerRadius="@dimen/radius_12"
            android:outlineProvider="background"
            app:elevation="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="@dimen/margin_16"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/already_have_an_account"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login"
                android:id="@+id/txt_login"
                android:paddingStart="@dimen/padding_8"
                android:textColor="@color/white"
                android:textStyle="bold"/>

        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</RelativeLayout>