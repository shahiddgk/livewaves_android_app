<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_20"
    android:background="?attr/selectableItemBackgroundBorderless"
    app:cardCornerRadius="@dimen/margin_10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="@dimen/margin_20"
            android:layout_marginBottom="@dimen/margin_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_marginBottom="@dimen/margin_10"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_10"
                    android:text="Title: "
                    android:textColor="@color/black"
                    android:textSize="@dimen/margin_15"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_marginBottom="@dimen/margin_10"
                    android:layout_marginTop="@dimen/margin_10"
                    android:id="@+id/subscription_title_simple"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_10"
                    android:textColor="@color/black"
                    android:textSize="@dimen/margin_15"
                    android:textStyle="bold"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_marginBottom="@dimen/margin_10"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_10"
                    android:text="Date: "
                    android:textColor="@color/black"
                    android:textSize="@dimen/margin_15"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_marginBottom="@dimen/margin_10"
                    android:layout_marginTop="@dimen/margin_10"
                    android:id="@+id/subscription_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_10"
                    android:textColor="@color/black"
                    android:textSize="@dimen/margin_15"
                    />

            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:visibility="gone"
                    android:id="@+id/permission_tracks"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:padding="@dimen/margin_5"
                    android:text="Tracks"

                    android:textSize="@dimen/margin_10"
                    android:textColor="@color/white"
                    android:background="@drawable/access_shape_background"
                    />
                <TextView
                    android:visibility="gone"
                    android:id="@+id/permission_events"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:padding="@dimen/margin_5"
                    android:text="Events"
                    android:textSize="@dimen/margin_10"
                    android:textColor="@color/white"
                    android:background="@drawable/access_shape_background"
                    />
                <TextView
                    android:visibility="gone"
                    android:id="@+id/permission_posts"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:padding="@dimen/margin_5"
                    android:text="Post"
                    android:textSize="@dimen/margin_10"
                    android:textColor="@color/white"
                    android:background="@drawable/access_shape_background"
                    />
                <TextView
                    android:visibility="gone"
                    android:id="@+id/subscription_live_stream"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:padding="@dimen/margin_5"
                    android:text="Stream"
                    android:textSize="@dimen/margin_10"
                    android:textColor="@color/white"
                    android:background="@drawable/access_shape_background"
                    />
                <TextView
                    android:id="@+id/permission_duration"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:padding="@dimen/margin_5"
                    android:text="1 month"
                    android:textSize="@dimen/margin_10"
                    android:textColor="@color/white"
                    android:background="@drawable/access_shape_background"
                    />
                <TextView
                    android:id="@+id/subscription_amount"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:padding="@dimen/margin_5"
                    android:text="1$"
                    android:textSize="@dimen/margin_10"
                    android:textColor="@color/white"
                    android:background="@drawable/access_shape_background"
                    />



            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="@dimen/margin_20"
                android:layout_marginRight="@dimen/margin_20"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">


                <ImageView
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:id="@+id/iv_edit_subscription"
                    android:padding="@dimen/margin_10"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_edit"
                    />
                <ImageView
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:id="@+id/iv_delete_subscription"
                    android:padding="@dimen/margin_10"
                    android:visibility="gone"
                   android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_delete_24"
                    />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch_subscription_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:textSize="18sp"
                    android:layout_weight="1"
                    android:padding="@dimen/margin_10"
                    android:theme="@style/SCBSwitch" />

                <TextView
                    android:textAlignment="center"
                    android:visibility="gone"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="@dimen/margin_20"
                    android:layout_gravity="center"
                    android:id="@+id/buy_button_subscription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_10"
                    android:textSize="@dimen/margin_10"
                    android:text="BUY"
                    android:textColor="@color/white"
                    android:background="@drawable/buy_button_shape"
                    />

            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>


</androidx.cardview.widget.CardView>