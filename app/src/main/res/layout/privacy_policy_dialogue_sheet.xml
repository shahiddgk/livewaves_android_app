<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomSheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="4dp">

    <RelativeLayout
        android:padding="@dimen/margin_30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/margin_20">

        <ImageView
            android:id="@+id/btn_close_pop_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="@dimen/margin_10"
            android:src="@drawable/ic_clear"
            app:tint="@color/white" />

        <View
            android:id="@+id/view"
            android:layout_below="@+id/btn_close_pop_up"
            android:layout_width="300dp"
            android:layout_height="0.5dp"
            android:layout_gravity="center"
            android:background="@color/grey_900" />

            <TextView
                android:layout_marginRight="@dimen/margin_10"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_5"
                android:id="@+id/pp1"
                android:layout_below="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/privacy_policy"
                android:textColor="@color/black"
                android:textSize="10sp" />
            <TextView
                android:layout_marginRight="@dimen/margin_10"
                android:layout_marginLeft="@dimen/margin_10"
                android:id="@+id/pp2"
                android:layout_below="@+id/pp1"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Why does LiveWaves use your data?"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:layout_marginRight="@dimen/margin_10"
                android:layout_marginLeft="@dimen/margin_10"
                android:id="@+id/pp3"
                android:layout_below="@id/pp2"
                android:layout_marginTop="@dimen/margin_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="To give you smooth and customize LiveWaves experience, improve our services, Understand how users use LiveWaves"
                android:textColor="@color/black"
                android:textSize="10sp" />

            <TextView
                android:layout_marginRight="@dimen/margin_10"
                android:layout_marginLeft="@dimen/margin_10"
                android:id="@+id/pp4"
                android:layout_below="@+id/pp3"
                android:layout_marginTop="@dimen/margin_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Detail of Live Waves Collects and uses data:"
                android:textColor="@color/black"
                android:textSize="10sp" />

            <TextView
                android:layout_marginRight="@dimen/margin_10"
                android:layout_marginLeft="@dimen/margin_10"
                android:id="@+id/pp5"
                android:layout_below="@+id/pp4"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your Live Waves information and content"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:layout_marginRight="@dimen/margin_10"
                android:layout_marginLeft="@dimen/margin_10"
                android:id="@+id/pp6"
                android:layout_below="@+id/pp5"
                android:layout_marginTop="@dimen/margin_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This may include any information you share with us, for example: you saved any type of address and photos you upload to the Live Waves."
                android:textColor="@color/black"
                android:textSize="10sp" />

            <TextView
                android:layout_marginRight="@dimen/margin_10"
                android:layout_marginLeft="@dimen/margin_10"
                android:id="@+id/pp7"
                android:layout_below="@+id/pp6"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Voice and audio activity"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:layout_marginRight="@dimen/margin_10"
                android:layout_marginLeft="@dimen/margin_10"
                 android:id="@+id/pp8"
                android:layout_below="@+id/pp7"
                android:layout_marginTop="@dimen/margin_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This may use your audio recorder or video recorder."
                android:textColor="@color/black"
                android:textSize="10sp" />

        <TextView
            android:layout_marginRight="@dimen/margin_10"
            android:layout_marginLeft="@dimen/margin_10"
            android:id="@+id/pp9"
            android:layout_below="@+id/pp8"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Storage activity"
            android:textColor="@color/black"
            android:textSize="15sp" />
        <TextView
            android:layout_marginRight="@dimen/margin_10"
            android:layout_marginLeft="@dimen/margin_10"
            android:id="@+id/pp10"
            android:layout_below="@+id/pp9"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This may use your storage and gallery for posting pictures or videos."
            android:textColor="@color/black"
            android:textSize="10sp" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>
